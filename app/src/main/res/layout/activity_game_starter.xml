<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameStarter">

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:onClick="profile"
        android:text="profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GameSetting_btn" />

    <Button
        android:id="@+id/GameSetting_btn"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:onClick="gameSetting"
        android:text="Game Setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartGmae_btn" />

    <Button
        android:id="@+id/logOut_btn"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:onClick="logout"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Scoreboard_btn" />

    <Button
        android:id="@+id/StartGmae_btn"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:onClick="startGame"
        android:text="Start game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MVP_textview" />

    <Button
        android:id="@+id/Scoreboard_btn"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:onClick="scoreboard"
        android:text="Scoreboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_btn" />

    <TextView
        android:id="@+id/MVP_textview"
        android:layout_width="233dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="#FF0303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="229dp"
        android:layout_height="218dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>